@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" action="/Admin/UpdateFunction" role="form">

            <div class="form-group">
                <input type="hidden" name="M_ID" value="@ViewBag.id" />
                <input type="hidden" name="Post_ID" value="@Model.Post_ID" />
                <label for="Post_Title" class="w3-label w3-large ">Title</label>
                <input type="text" required="required" name="Post_Title" class="form-control" value="@Model.Post_Title" />
            </div>
            <div class="form-group">
                <label for="Post_Description" class="w3-label w3-large ">Description of Post</label>
                <textarea required="required" name="Post_Description" class="form-control" rows="7" cols="6">@Model.Post_Description</textarea>

            </div>





            <div class="form-group">
                <button class="btn btn-info" type="submit" id="add">Post Experience</button>
            </div>

        </form>

    </div>
    <div class="col-md-2"></div>
</div>
