@using Mvc_HowTo.Models
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/themes/w3.css" rel="stylesheet" />


    <title>Index</title>
    <style>
        body {
            padding-top: 60px;
        }

        .jumbotron {
            background-color: #d5d3d3;
            text-align: center;
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>

<body style="background-color: #d6ede5">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>

            <a href="#" class="navbar-brand"><p class="text-primary"><h4>HowTo.Pk</h4></p></a>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Member/Index?id=@ViewBag.id" class=" btn navbar-btn btn-block"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li><a href="/Member/myPosts" class=" btn navbar-btn btn-block"><span class="glyphicon glyphicon-inbox"></span> My Posts</a></li>
                    <li><a href="/Member/myProfile" class=" btn navbar-btn btn-block"><span class="glyphicon glyphicon-user"></span> My Profile</a></li>
                    @*<a href="/Member/UploadPost" class=" btn navbar-btn btn-block"><span class="glyphicon glyphicon-user"></span>Upload Post</a>*@
                  @*  <li><a href="/Member/Index#newPosts" class=" btn navbar-btn btn-block"><span class="glyphicon glyphicon-file"></span> View New Posts</a></li>*@
                    <li><a href="/Member/LogOut" class="btn navbar-btn btn-block"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>


                </ul>
                <ul class="navbar-right">
                    <li>
                        <form method="get" action="/Member/SearchPost" role="form" class="navbar-form nav">
                            <div class="form-group form-inline">

                                <select class="form-control" id="Category" name="Category" required>
                                    <option value="0" id="0">-- Select Category --</option>
                                    @foreach (Category c in ViewBag.category)
                                    {
                                        <option value="@c.Cat_Id" id="@c.Cat_Id">@c.Cat_Name</option>

                                    }

                                </select>

                                <select class="form-control" id="City" name="City" required>
                                    <option value="0" id="0">-- Select City --</option>
                                    @foreach (City c in ViewBag.City)
                                    {
                                        <option value="@c.City_Id" id="@c.City_Id">@c.City_Name</option>

                                    }

                                </select>

                                <button type="submit" class="btn btn-success" style="background: #81bfaa">Search</button>

                            </div>
                        </form>
                    </li>
                </ul>
            </div>

        </div>
    </nav><!--Nav ends-->
    <!--Jumbotron-->
    <div class="container alert" style="background-color: #81bfaa;">
        <div class="row">
            <div class="col-md-4">
                <div class=""><h1><font style="font-family:Gabriola"><b><u>HOWTO.PK</u></b></font></h1></div>
            </div>
            <div class="col-md-8">
                <div class=" text-center"><h1><font style="font-family:Gabriola"><b>Welcome to the Community of HowTo.Pk</b></font></h1></div>
            </div>
        </div>


    </div><!--End of javatron-->

    

    @RenderBody()
 
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <footer class="modal-footer well">
        EnterPrise Application Development
    </footer>
</body>
</html>
